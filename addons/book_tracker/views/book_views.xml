<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">book.form</field>
        <field name="model">book.tracker</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="is_read"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_book_list" model="ir.ui.view">
        <field name="name">book.list</field>
        <field name="model">book.tracker</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="author"/>
                <field name="is_read"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">book.tracker</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_book_root" name="Book Tracker"/>
    <menuitem id="menu_book" name="Books" parent="menu_book_root" action="action_book"/>
</odoo>
